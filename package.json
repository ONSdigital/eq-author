{
  "name": "eq-author",
  "version": "0.0.1",
  "private": true,
  "homepage": "./",
  "scripts": {
    "start": "yarn && node scripts/start.js",
    "start:mockAPI": "REACT_APP_USE_MOCK_API=true node scripts/start.js",
    "build": "yarn build:status && node scripts/build.js",
    "build:mockAPI": "REACT_APP_USE_MOCK_API=true node scripts/build.js",
    "build:status": "node scripts/build-status-page.js",
    "test": "node scripts/test.js",
    "test:storybook": "jest --testRegex ^.+\\.storytest\\.js$",
    "smoketest:author": "cypress run -s cypress/integration/author_spec.js --browser chrome",
    "lint": "yarn lint:js && yarn lint:css",
    "lint:js": "eslint src --ext .graphql --ext .js --max-warnings=0",
    "lint:css": "stylelint './src/**/*.js'",
    "serve": "serve -S -p 3000 build/",
    "deploy": "npm run build && gh-pages -d build",
    "storybook": "export NODE_PATH=src/ && start-storybook -p 9001",
    "storybook-build": "export NODE_PATH=src/ && build-storybook -s public -o storybook-static",
    "storybook-deploy": "yarn storybook-build && gh-pages -d .out",
    "precommit": "lint-staged",
    "coverage": "yarn test -- --coverage",
    "cypress:open": "cypress open"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.2.12",
    "@storybook/addon-knobs": "^3.2.12",
    "@storybook/addon-options": "^3.2.12",
    "@storybook/react": "^3.2.12",
    "animation-frame-polyfill": "^1.0.1",
    "autoprefixer": "^7.1.5",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-jest": "^21.2.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-add-react-displayname": "^0.0.4",
    "babel-plugin-styled-components": "^1.2.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-app": "^3.0.3",
    "babel-preset-stage-2": "^6.24.1",
    "babel-runtime": "^6.26.0",
    "case-sensitive-paths-webpack-plugin": "^2.1.1",
    "chalk": "^2.1.0",
    "connect-history-api-fallback": "^1.3.0",
    "cross-spawn": "^5.1.0",
    "css-loader": "^0.28.7",
    "cypress": "1.4.1",
    "detect-port": "^1.2.1",
    "dotenv": "^4.0.0",
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-16": "^1.1.0",
    "eslint": "^4.8.0",
    "eslint-import-resolver-webpack": "^0.8.4",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-graphql": "^1.5.0",
    "extract-text-webpack-plugin": "^3.0.1",
    "file-loader": "^1.1.5",
    "filesize": "^3.5.10",
    "fs-extra": "^4.0.2",
    "gh-pages": "^1.0.0",
    "gzip-size": "^4.0.0",
    "html-webpack-plugin": "^2.30.1",
    "http-proxy-middleware": "^0.17.4",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "jest-styled-components": "^4.7.0",
    "jest-transform-graphql": "^2.1.0",
    "json-loader": "^0.5.7",
    "json-schema-faker": "0.4.3",
    "lint-staged": "^4.2.3",
    "node-glob": "^1.2.0",
    "object-assign": "^4.1.1",
    "postcss-flexbugs-fixes": "^3.2.0",
    "postcss-loader": "^2.0.7",
    "prettier": "^1.7.4",
    "promise": "^8.0.1",
    "prop-types": "^15.6.0",
    "react-dev-utils": "^4.1.0",
    "react-router-test-context": "^0.1.0",
    "react-svg-loader": "^2.1.0",
    "react-test-renderer": "^16.0.0",
    "recursive-readdir": "^2.2.1",
    "redux-mock-store": "^1.3.0",
    "serve": "^6.2.0",
    "strip-ansi": "^4.0.0",
    "style-loader": "^0.19.0",
    "styled-components-test-utils": "^0.3.0",
    "stylelint": "^8.2.0",
    "stylelint-config-standard": "^17.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.0.0",
    "svg-url-loader": "^2.2.0",
    "svgo-loader": "^1.2.1",
    "sw-precache-webpack-plugin": "^0.11.4",
    "url-loader": "^0.6.2",
    "wait-on": "^2.0.2",
    "webpack": "^3.7.1",
    "webpack-dev-server": "^2.9.1",
    "webpack-manifest-plugin": "^1.3.2",
    "whatwg-fetch": "^2.0.3"
  },
  "dependencies": {
    "@storybook/addon-storyshots": "^3.3.14",
    "apollo-cache-inmemory": "^1.1.9",
    "apollo-client": "^2.2.5",
    "apollo-client-preset": "^1.0.8",
    "apollo-link": "^1.1.0",
    "apollo-link-http": "^1.3.3",
    "apollo-link-schema": "^1.0.3",
    "connected-react-router": "^4.2.1",
    "draft-convert": "^2.0.0",
    "draft-js": "0.10.4",
    "draft-js-raw-content-state": "^1.2.5",
    "draftjs-to-html": "^0.7.6",
    "enzyme-to-json": "^3.3.1",
    "eq-author-graphql-schema": "^0.5.0",
    "eq-author-mock-api": "ONSdigital/eq-author-mock-api#4342f6a",
    "eslint-config-eq-author": "^1.1.0",
    "firebase": "^4.6.2",
    "firebaseui": "2.4.1",
    "graphql": "^0.13.0",
    "graphql-anywhere": "^4.1.3",
    "graphql-iso-date": "^3.3.0",
    "graphql-tag": "^2.7.3",
    "graphql-tools": "^2.21.0",
    "lodash": "^4.17.4",
    "normalize.css": "^7.0.0",
    "normalizr": "^3.2.4",
    "polished": "^1.8.0",
    "raven-js": "^3.19.1",
    "react": "^16.2.0",
    "react-addons-test-utils": "^15.6.2",
    "react-apollo": "^2.0.4",
    "react-document-title": "^2.0.3",
    "react-dom": "^16.2.0",
    "react-error-overlay": "^2.0.2",
    "react-firebaseui": "^1.0.10",
    "react-hot-loader": "^3.0.0",
    "react-inlinesvg": "^0.7.5",
    "react-menu-list": "^5.0.0",
    "react-modal": "^3.3.2",
    "react-redux": "^5.0.6",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "react-router-redux": "^4.0.8",
    "react-textarea-autosize": "^5.1.0",
    "react-tooltip": "^3.4.0",
    "react-transition-group": "^2.2.1",
    "redux": "^3.7.2",
    "redux-devtools-extension": "^2.13.2",
    "redux-thunk": "^2.2.0",
    "styled-components": "^2.2.1",
    "synchronous-promise": "^2.0.3",
    "uncontrollable": "^4.1.0"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": false,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/**/*story.js",
      "!src/graphql/*.js",
      "!src/tests/**/*.js"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js",
      "<rootDir>/src/tests/setup/throwOnConsole.js",
      "<rootDir>/src/tests/setup/mockLocalStorage.js"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/src/tests/setup/JestTestSetup.js",
    "snapshotSerializers": [
      "<rootDir>/node_modules/enzyme-to-json/serializer"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>[/\\\\](build|docs|node_modules|scripts)[/\\\\]"
    ],
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "\\.(gql|graphql)$": "jest-transform-graphql",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web",
      "\\.svg\\?inline$": "<rootDir>/config/jest/svgTransform.js"
    },
    "modulePaths": [
      "<rootDir>/src/"
    ]
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "moduleRoots": [
    "./src"
  ]
}
