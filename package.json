{
  "name": "eq-author",
  "version": "0.0.1",
  "private": true,
  "homepage": "./",
  "scripts": {
    "start": "yarn && node scripts/start.js",
    "start:mockAPI": "yarn && REACT_APP_USE_MOCK_API=true node scripts/start.js",
    "build": "node scripts/build.js",
    "test": "node scripts/test.js",
    "smoketest:author": "chimp config/chimp.author.js",
    "smoketest:storybook": "chimp config/chimp.storybook.js",
    "lint": "eslint src --ext .graphql --ext .js",
    "serve": "npm install -g serve && serve -p 3000 build/",
    "deploy": "npm run build && gh-pages -d build",
    "storybook": "export NODE_PATH=src/ && start-storybook -p 9001",
    "storybook-build": "export NODE_PATH=src/ && build-storybook -s public -o storybook-static",
    "storybook-deploy": "yarn storybook-build && gh-pages -d .out",
    "precommit": "lint-staged",
    "coverage": "yarn test -- --coverage -u"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.1.6",
    "@storybook/addon-knobs": "^3.1.6",
    "@storybook/addon-options": "^3.1.6",
    "@storybook/react": "^3.1.7",
    "@types/node": "^8.0.26",
    "autoprefixer": "^7.1.1",
    "awesome-typescript-loader": "^3.2.3",
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-loader": "^7.0.0",
    "babel-plugin-add-react-displayname": "^0.0.4",
    "babel-plugin-styled-components": "^1.1.4",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-app": "^3.0.0",
    "babel-preset-stage-2": "^6.24.1",
    "babel-runtime": "^6.20.0",
    "case-sensitive-paths-webpack-plugin": "^2.1.1",
    "chalk": "1.1.3",
    "chimp": "^0.49.0",
    "connect-history-api-fallback": "1.3.0",
    "cross-spawn": "^5.1.0",
    "css-loader": "^0.28.4",
    "detect-port": "^1.1.3",
    "dotenv": "^4.0.0",
    "enzyme-to-json": "^1.5.1",
    "eslint": "^3.19.0",
    "eslint-loader": "^1.7.1",
    "eslint-plugin-graphql": "^1.2.0",
    "eslint-plugin-typescript": "^0.7.0",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.11.1",
    "filesize": "^3.5.10",
    "fs-extra": "^3.0.1",
    "gh-pages": "^1.0.0",
    "gzip-size": "3.0.0",
    "html-webpack-plugin": "^2.28.0",
    "http-proxy-middleware": "^0.17.4",
    "husky": "^0.13.4",
    "jest": "^20.0.4",
    "jest-styled-components": "^4.2.1",
    "json-loader": "0.5.4",
    "lint-staged": "^3.5.1",
    "node-glob": "^1.2.0",
    "object-assign": "4.1.1",
    "postcss-flexbugs-fixes": "^3.0.0",
    "postcss-loader": "^2.0.5",
    "prettier": "^1.3.1",
    "promise": "7.1.1",
    "react-dev-utils": "^3.0.0",
    "react-router-test-context": "^0.1.0",
    "react-test-renderer": "^15.5.4",
    "recursive-readdir": "^2.2.1",
    "source-map-loader": "^0.2.1",
    "storybook-router": "^0.2.8",
    "strip-ansi": "3.0.1",
    "style-loader": "^0.18.1",
    "svg-url-loader": "^2.0.2",
    "svgo-loader": "^1.2.1",
    "sw-precache-webpack-plugin": "^0.9.2",
    "typescript": "^2.5.2",
    "typescript-eslint-parser": "^7.0.0",
    "url-loader": "^0.5.8",
    "webpack": "^2.6.1",
    "webpack-dev-server": "^2.4.5",
    "webpack-manifest-plugin": "1.1.0",
    "whatwg-fetch": "^2.0.3"
  },
  "dependencies": {
    "@types/graphql": "^0.11.0",
    "@types/history": "^4.6.0",
    "@types/react": "^16.0.5",
    "@types/react-dom": "^15.5.4",
    "@types/react-router": "^4.0.15",
    "@types/react-router-redux": "^5.0.8",
    "connected-react-router": "^4.2.1",
    "enzyme": "^2.8.2",
    "eq-author-graphql-schema": "ONSdigital/eq-author-graphql-schema#766717f",
    "eq-author-mock-api": "https://github.com/ONSdigital/eq-author-mock-api.git",
    "eslint-config-eq-author": "^1.0.2",
    "graphql-tag": "^2.4.2",
    "jest-transform-graphql": "^2.1.0",
    "lodash": "^4.17.4",
    "normalize.css": "^7.0.0",
    "normalizr": "^3.2.3",
    "polished": "^1.2.1",
    "react": "^15.6.1",
    "react-addons-test-utils": "^15.5.1",
    "react-apollo": "^1.4.4",
    "react-dom": "^15.5.4",
    "react-error-overlay": "^1.0.7",
    "react-hot-loader": "next",
    "react-redux": "^5.0.5",
    "react-router": "^4.1.1",
    "react-router-dom": "^4.1.1",
    "react-router-redux": "next",
    "react-rte": "^0.11.0",
    "react-textarea-autosize": "^5.0.7",
    "react-tooltip": "^3.3.0",
    "react-transition-group": "^2.1.0",
    "redux": "^3.6.0",
    "redux-devtools-extension": "^2.13.2",
    "redux-thunk": "^2.2.0",
    "serve": "^6.0.0",
    "styled-components": "^2.0.0",
    "uncontrollable": "^4.1.0"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": false,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/**/*story.js",
      "!src/graphql/*.js",
      "!src/tests/**/*.js"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js",
      "<rootDir>/src/tests/setup/throwOnConsole.js"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/src/tests/setup/JestTestSetup.js",
    "snapshotSerializers": [
      "<rootDir>/node_modules/enzyme-to-json/serializer"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>[/\\\\](build|docs|node_modules|scripts)[/\\\\]"
    ],
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "\\.(gql|graphql)$": "jest-transform-graphql",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    },
    "modulePaths": [
      "<rootDir>/src/"
    ]
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "moduleRoots": [
    "./src"
  ]
}
