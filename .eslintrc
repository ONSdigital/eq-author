{
  "extends": ["eslint:recommended", "react-app", "plugin:react/recommended", "prettier"],
  "plugins": [
    "react",
    "babel"
  ],
  "rules": {
    "eqeqeq": 2,
    "camelcase": 2,
    "curly": 2,
    "guard-for-in": 2,
    "key-spacing": 0,
    "new-cap": 0,
    "consistent-return": 0,
    "no-alert": 0,
    "no-bitwise": 2,
    "no-caller": 2,
    "no-shadow": 0,
    "no-extend-native": 2,
    "no-shadow-restricted-names": 0,
    "no-underscore-dangle": 0,
    "no-unused-expressions": 2,
    "no-use-before-define": 2,
    "no-extra-bind": 2,
    "no-lone-blocks": 2,
    "no-loop-func": 2,
    "no-new-func": 2,
    "no-return-assign": 2,
    "no-sequences": 2,
    "no-throw-literal": 2,
    "no-useless-call": 2,
    "no-useless-concat": 2,
    "no-useless-escape": 2,
    "no-unneeded-ternary": 2,
    "no-with": 2,
    "strict": [0, "function"],
    "one-var": [2, { "initialized": "never" }],
    "no-eval": 2,
    "no-floating-decimal": 2,
    "no-implicit-coercion": 2,
    "no-implied-eval": 2,
    "no-invalid-this": 0,
    "no-iterator": 2,
    "no-new": 2,
    "no-new-wrappers": 2,
    "no-proto": 2,
    "no-return-await": 2,
    "no-script-url": 2,
    "no-self-compare": 2,
    "no-unmodified-loop-condition": 2,

    "react/display-name": 0,
    "react/prop-types": 0,
    "react/forbid-prop-types": 1,
    "react/no-danger": 2,
    "react/no-did-mount-set-state": 2,
    "react/no-did-update-set-state": 2,
    "react/self-closing-comp": 2,

    "react/jsx-boolean-value": 2,
    "react/jsx-handler-names": 2,
    "react/jsx-no-bind": 1,
    "react/jsx-pascal-case": 2,

    "babel/no-invalid-this": 2
  }
}
