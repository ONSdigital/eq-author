{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "strictNullChecks": true,
    "module": "es6",
    "jsx": "react",
    "target": "es5",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["../node_modules/@types"],
    "baseUrl": "./src",
    "lib": ["es5", "es6", "dom", "esnext.asynciterable"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"],
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "useCache": true
  }
}
